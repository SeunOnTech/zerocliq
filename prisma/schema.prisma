model CardStack {
  id                String       @id @default(cuid())
  userId            String
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Permission Context (The "One Signature")
  permissionsContext String      @db.Text
  delegationManager  String
  
  // Master Budget Config
  tokenAddress      String
  tokenSymbol       String
  tokenDecimals     Int          @default(18)
  totalBudget       String       // e.g. "100000000" (wei)
  periodDuration    Int          // Seconds (e.g. 86400)

  subCards          SubCard[]
  
  status            StackStatus  @default(ACTIVE)
  createdAt         DateTime     @default(now())
  expiresAt         DateTime
  
  @@index([userId])
}

model SubCard {
  id                String       @id @default(cuid())
  stackId           String
  stack             CardStack    @relation(fields: [stackId], references: [id], onDelete: Cascade)
  
  type              SubCardType
  name              String
  color             String
  
  allocationPercent Int
  currentSpent      String       @default("0")
  
  config            Json         @default("{}")
  
  status            StackStatus  @default(ACTIVE)
  createdAt         DateTime     @default(now())
  
  @@index([stackId])
}

enum StackStatus {
  ACTIVE
  PAUSED
  EXPIRED
}

enum SubCardType {
  DCA_BOT
  LIMIT_ORDER
  MANUAL_TRADING
}
